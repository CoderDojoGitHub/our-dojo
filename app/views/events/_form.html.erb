<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p><%= f.label :title %><%= f.text_field :title %></p>
  <p><%= f.label :start_time, "Start time" %><%= f.text_field :start_time %></p>
  <p><%= f.label :end_time, "End time" %><%= f.text_field :end_time %>Leave blank for default 2 hour event</p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
